# Replayor Configuration
# Copy this file and modify the values according to your setup

# Path to the replayor binary
REPLAYOR_BINARY=replayor

# Enable continuous mode (true/false)
CONTINUOUS_MODE=true

# Engine API JWT secret (hex string)
ENGINE_API_SECRET=0c00f14247582fcd3c837311148cda1f56e7c2caa42fb1ba8a3cc7843603846e

# Engine API URL (authenticated RPC endpoint)
ENGINE_API_URL=http://node:8553

# Execution client URL (HTTP RPC endpoint)
EXECUTION_URL=http://node:9123

# Source node URL (where to fetch blocks from)
SOURCE_NODE_URL=http://host.docker.internal:8123

# Strategy (replay, stress, etc.)
STRATEGY=replay

# Path to rollup configuration file
ROLLUP_CONFIG_PATH=./rollup.json

# Path to store results
DISK_PATH=./result

# Storage type (disk, s3, etc.)
STORAGE_TYPE=disk

# Number of blocks to process
BLOCK_COUNT=1

# Benchmark start block (optional)
# If set, replayor will first fast-forward to this block before starting benchmark
# Useful when starting from a snapshot: set to snapshot_block_number + 1
# Example: If snapshot is at block 1000000, set to 1000001
# Default: 0 (disabled, start from current block)
#BENCHMARK_START_BLOCK=0

